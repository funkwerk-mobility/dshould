{
	"name": "dshould",
	"description": "D fluent asserts library",
	"license": "MIT",
	"authors": [
		"Mathis Beer"
	],

	"targetType": "library",

	"sourcePaths": ["src"],
	"importPaths": ["src"],

	"configurations": [
		{
			"name": "library",
			"dependencies": {
				"unit-threaded": {
					"version": "*",
					"optional": true
				},
				"prettyprint": ">=1.0.6",
			}
		},
		{
			"name": "unittest",
			"targetType": "executable",
			"targetName": "TestRunner",
			"targetPath": "build",
			"preBuildCommands": ["$DUB run --compiler=$$DC unit-threaded -c gen_ut_main -- -f build/ut.d"],
			"mainSourceFile": "build/ut.d",
			"dependencies": {
				"unit-threaded": "~>1.0",
				"prettyprint": ">=1.0.6",
			}
		}
	]
}
